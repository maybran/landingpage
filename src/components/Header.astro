---
import HeaderButton from "./HeaderButton.astro";
import BarsIcon from "../icons/BarsIcon.astro";
import SearchBar from "./SearchBar.astro"
---

<!-- component -->
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
<div class="min-h-12">
  <div class="antialiased">
  <div class="w-full">
    <div x-data="{ open: true }" class="flex flex-col max-w-screen-lg px-4 mx-auto md:items-center md:justify-between md:flex-row md:px-6 lg:px-8">
      <div class="flex flex-row items-center justify-between p-4">
        <HeaderButton href="/">SPACEX</HeaderButton>
        <button class="rounded-lg md:hidden focus:outline-none focus:shadow-outline" @click="open = !open">
          <BarsIcon/>
        </button>
      </div>
      <nav :class="{'flex': open, 'hidden': !open}" class="flex-col flex-grow hidden pb-4 md:pb-0 md:flex md:justify-end md:flex-row">
        <HeaderButton href="#">Last Releases</HeaderButton>
        <HeaderButton href="#">Oldest Releases</HeaderButton>
        <HeaderButton href="#">More Projetcs</HeaderButton>
        <SearchBar/>
      </nav>
    </div>
  </div>
</div>
</div>







