---
import ButtonFourOFour from "../components/ButtonFourOFour.astro";

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>404 Not found</title>
	</head>
	<body class="bg-gray-900 min-h-fit p-32 mt-32">
		
		<div class="bg-gradient-to-r from-gray-600 to-slate-700 flex flex-col justify-center items-center rounded-xl">
            <h1 class="mt-6 text-9xl tracking-tight font-extrabold text-white">404</h1>
            <h3 class="mt-10 text-2xl font-medium text-white">Oops, the page you're looking for does not exist.</h3>
            <div class="py-20">
                <ButtonFourOFour href="/">
                    Return Home
                </ButtonFourOFour>
                <ButtonFourOFour href="/">
                    Report Problem
                </ButtonFourOFour>
            </div>
        </div>
		
	</body>
</html>

    
